{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="alert alert-success">
  <h1>Connexion</h1>
</div>

<form action="{{ path("fos_user_security_check") }}" class ="connexion col-md-4 col-md-offset-4" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
      <input type="text" class="form-control" id="username" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
      <input type="password" class="form-control" id="password" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />
    </div>

    <div class="form-group">
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
